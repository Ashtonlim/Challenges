#VRML V2.0 utf8
#polygon mesh example: a pyramid

Background {skyColor 0 0 1}


Shape {
	appearance Appearance{
		material Material { 
			diffuseColor     1 1 1   #red=1, green=0, blue=0
			specularColor    1 1 1	 #red=1, green=1, blue=1
			transparency 0   # try values between 0 and 1
			shininess 1      # shiny surface, try values between 0 and 1
			}
		}
	geometry IndexedFaceSet {
		coord Coordinate {
                    point [
				# bottom vertices
				-1.0  -1.0   1.0,	#vertex 0
				-1.0  -1.0  -1.0,	#vertex 1
				1.0   -1.0  -1.0,	#vertex 2
				1.0   -1.0   1.0,	#vertex 3

				#for 3D cube
				#top vertex
				-1.0   1.0   1.0,	#vertex 4
				1.0    1.0   1.0,	#vertex 5
				1.0    1.0  -1.0,	#vertex 6
				-1.0   1.0  -1.0	#vertex 7
                    ]
                }
		coordIndex [
			#bottom square
			 0, 1, 2, 3, -1,
			#top square
			 7, 6, 5, 4, -1,
			#left side
			 0, 4, 7, 1, -1,
			#right side
			 3, 2, 6, 5, -1,
			#front
			 0, 3, 5, 4, -1,
			#back
			 2, 1, 7, 6, -1
			]
			
	}
}
